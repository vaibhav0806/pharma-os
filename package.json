{
  "name": "pharma-os",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@pharma-os/server",
    "dev:dashboard": "npm run dev --workspace=@pharma-os/dashboard",
    "build": "npm run build --workspaces",
    "migrate": "npm run migrate --workspace=@pharma-os/server",
    "migrate:down": "npm run migrate:down --workspace=@pharma-os/server"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
